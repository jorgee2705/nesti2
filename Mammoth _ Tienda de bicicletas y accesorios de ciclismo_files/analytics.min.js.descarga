function impresionSliderGA4(n,t,i){idItem=n.toLowerCase().replaceAll("-","_");idItem=idItem.replaceAll(" ","_");idItem=idItem.replaceAll("___","_");n=capitalize(n);arrItemsGA4.push({item_id:idItem,item_name:n,promotion_id:idItem,promotion_name:n,creative_name:t,creative_slot:i})}function clickSliderGA4(n,t,i,r=""){idItem=n.toLowerCase().replaceAll("-","_");idItem=idItem.replaceAll(" ","_");idItem=idItem.replaceAll("___","_");enviarEventoGA4("select_promotion",n,t,i,r)}function enviarEventoGA4(n,t,i,r,u=""){idItem=t.toLowerCase().replaceAll("-","_");idItem=idItem.replaceAll(" ","_");idItem=idItem.replaceAll("___","_");t=capitalize(t);dataLayer.push({ecommerce:null});dataLayer.push({event:n,ecommerce:{items:[{item_id:idItem,item_name:t,promotion_id:idItem,promotion_name:t,creative_name:i,creative_slot:r,item_variant:u}]}})}function enviarEventosGA4(n,t){dataLayer.push({event:n,ecommerce:{items:t}})}function capitalize(n){var t,i;for(n=n.toLowerCase(),t=n.split(" "),i=0;i<t.length;i++)t[i]=t[i].charAt(0).toUpperCase()+t[i].slice(1);return t.join(" ")}